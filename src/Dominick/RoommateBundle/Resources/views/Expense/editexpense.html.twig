{% extends "DominickRoommateBundle::layout.html.twig" %}

{% block title "Edit an Expense" %}

{% block content_header '' %}

{% block content %}
    <div class="row">
        <div class="col-md-4">
            <h3>Edit an expense</h3>

            <p>Did someone make a mistake on an expense? Use this form to correct it.</p>

            {{ form_start(form) }}
            {{ form_errors(form) }}

            {{ form_label(form.description, 'Expense Description') }}
            {{ form_errors(form.description) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control' }}) }}

            {{ form_label(form.cost, 'Cost') }}
            {{ form_errors(form.cost) }}
            {{ form_widget(form.cost, {'attr': {'class': 'form-control' }}) }}

            {{ form_label(form.type, 'Type') }}
            {{ form_errors(form.type) }}
            {{ form_widget(form.type, {'attr': {'class': 'form-control' }}) }}

            <br>

            <p>{{ form_widget(form.Update, {'attr': {'class': 'btn btn-primary' }}) }}</p>
            {{ form_end(form) }}

        </div>
        <div class="col-md-8">
            <h3>Permanently Delete</h3>
            <p>Alternatively, you can delete this expense by clicking the button below.</p>
            <p><a class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span> Delete this expense</a></p>
        </div>
    </div>
{% endblock %}

